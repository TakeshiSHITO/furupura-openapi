{
  "name": "furupura-openapi",
  "version": "1.0.0",
  "description": "Furupura API Contract Definitions",
  "scripts": {
    "bundle:shop": "redocly bundle contexts/shop/openapi.yaml -o bundled/shop.openapi.yaml",
    "bundle:user": "redocly bundle contexts/user/openapi.yaml -o bundled/user.openapi.yaml",
    "bundle:admin": "redocly bundle contexts/admin/openapi.yaml -o bundled/admin.openapi.yaml",
    "bundle:all": "run-p bundle:shop bundle:user bundle:admin",
    "validate:shop": "redocly lint contexts/shop/openapi.yaml",
    "validate:user": "redocly lint contexts/user/openapi.yaml",
    "validate:admin": "redocly lint contexts/admin/openapi.yaml",
    "validate:all": "run-p validate:shop validate:user validate:admin",
    "docs:build": "pnpm run bundle:all && mkdir -p docs/shop docs/user docs/admin && run-p docs:build:shop docs:build:user docs:build:admin docs:build:portal",
    "docs:build:shop": "redocly build-docs bundled/shop.openapi.yaml -o docs/shop/index.html",
    "docs:build:user": "redocly build-docs bundled/user.openapi.yaml -o docs/user/index.html",
    "docs:build:admin": "redocly build-docs bundled/admin.openapi.yaml -o docs/admin/index.html",
    "docs:build:portal": "redocly build-docs portal.yaml -o docs/index.html",
    "lint": "prettier --check '**/*.{js,json,md,yaml,yml}'",
    "lint:fix": "prettier --write '**/*.{js,json,md,yaml,yml}'",
    "clean": "rm -rf bundled/* docs/*.html docs/*/*.html .redocly-cache",
    "prepare": "husky"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@redocly/cli": "^2.0.5",
    "@redocly/openapi-core": "^2.0.2",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.5",
    "npm-run-all2": "^7.0.2",
    "prettier": "^3.6.2"
  },
  "packageManager": "pnpm@9.0.0",
  "lint-staged": {
    "contexts/**/*.yaml": [
      "redocly lint"
    ],
    "!(node_modules|.github)/**/*.{js,json,md,yaml,yml}": [
      "prettier --write"
    ],
    "*.{js,json,md}": [
      "prettier --write"
    ]
  }
}

{
  "name": "furupura-openapi",
  "version": "1.0.0",
  "description": "Furupura API Contract Definitions",
  "scripts": {
    "bundle:shop": "redocly bundle contexts/shop/openapi.yaml -o bundled/shop.openapi.yaml",
    "bundle:user": "redocly bundle contexts/user/openapi.yaml -o bundled/user.openapi.yaml",
    "bundle:admin": "redocly bundle contexts/admin/openapi.yaml -o bundled/admin.openapi.yaml",
    "bundle": "run-p bundle:shop bundle:user bundle:admin",
    "validate:shop": "redocly lint contexts/shop/openapi.yaml",
    "validate:user": "redocly lint contexts/user/openapi.yaml",
    "validate:admin": "redocly lint contexts/admin/openapi.yaml",
    "validate": "run-p validate:shop validate:user validate:admin",
    "build": "pnpm run bundle && mkdir -p docs/shop docs/user docs/admin && run-p build:shop build:user build:admin build:portal",
    "serve": "npx http-server docs -p 8080 -c-1 -o",
    "dev": "pnpm run build && run-p serve watch",
    "watch": "chokidar \"contexts/**/*.{yaml,yml}\" \"shared/**/*.{yaml,yml}\" \"portal.yaml\" -c \"pnpm run build\"",
    "build:shop": "pnpm run bundle:shop && mkdir -p docs/shop && redocly build-docs bundled/shop.openapi.yaml -o docs/shop/index.html",
    "build:user": "pnpm run bundle:user && mkdir -p docs/user && redocly build-docs bundled/user.openapi.yaml -o docs/user/index.html",
    "build:admin": "pnpm run bundle:admin && mkdir -p docs/admin && redocly build-docs bundled/admin.openapi.yaml -o docs/admin/index.html",
    "build:portal": "redocly build-docs portal.yaml -o docs/index.html",
    "lint": "prettier --check '**/*.{js,json,md,yaml,yml}'",
    "lint:fix": "prettier --write '**/*.{js,json,md,yaml,yml}'",
    "clean": "rm -rf bundled/* docs/*.html docs/*/*.html .redocly-cache",
    "prepare": "husky"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^20.0.0",
    "@redocly/cli": "^2.2.2",
    "@redocly/openapi-core": "^2.0.7",
    "chokidar-cli": "^3.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.5",
    "npm-run-all2": "^8.0.4",
    "prettier": "^3.6.2"
  },
  "packageManager": "pnpm@9.0.0",
  "lint-staged": {
    "contexts/*/openapi.yaml": [
      "sh -c 'redocly lint \"$0\"'"
    ],
    "!(node_modules|.github)/**/*.{js,json,md,yaml,yml}": [
      "prettier --write"
    ],
    "*.{js,json,md}": [
      "prettier --write"
    ]
  }
}
